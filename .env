# Server Configuration
NODE_ENV=development
PORT=3001

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/bachelor-house-manager

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_make_it_at_least_32_characters_long_and_secure


# Optional: If using MongoDB Atlas
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/bachelor-house-manager?retryWrites=true&w=majority

# Optional: Additional Security
BCRYPT_ROUNDS=12

# Optional: CORS Settings (if needed)
CORS_ORIGIN=http://localhost:3000

# Optional: Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Optional: Session Configuration
SESSION_SECRET=your_session_secret_here

# Optional: File Upload (if you add file upload later)
MAX_FILE_SIZE=10485760

# Optional: Email Configuration (for future features)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASS=your-app-password

# Optional: Production Database (for deployment)
# PROD_MONGODB_URI=your-production-mongodb-uri